<link href="/stylesheets/profile.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-show-password/1.0.3/
bootstrap-show-password.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

{{# if errors}}
    <div class="alert alert-danger">
        <ul>
            {{# each errors }}
                <li><h2>{{this.msg}}</h2></li>
            {{/each}}
        </ul>
    </div>
{{/if}}




<div class="container">
    <div class="row">


        <div class="col-md-7 ">

            <div class="panel panel-default">
                <div class="panel-heading">  <h4 >Update Password</h4></div>
                <div class="panel-body">

                    <div class="box box-info">

                        <div class="box-body">
                            <form action="/users/changePassword" method="post">
                            <div class="col-sm-6">
                                <div  align="center"> <img alt="User Pic" src="{{ user.profileImage}}" id="profile-image1" class="img-circle img-responsive">









                                </div>

                                <br>

                                <!-- /input-group -->
                            </div>
                            <div class="col-sm-6">
                                <h4 style="color:#00b1b1;">{{user.firstName}} {{user.lastName}}</h4></span>
                                <span><p>{{user.role}}</p></span>
                            </div>
                            <div class="clearfix"></div>
                            <hr style="margin:5px 0 5px 0;">


                            <div class="col-sm-5 col-xs-6 tital " >Current Password:</div><div class="col-sm-7 col-xs-6 ">
                            <input type="password" class="form-control" id="currentPassword" placeholder="Type here" name="currentPassword"
                                   data-toggle="password"></div>
                            <div class="clearfix"></div>
                            <div class="bot-border"></div>

                            <div class="col-sm-5 col-xs-6 tital " >New Password:</div><div class="col-sm-7">
                            <input type="password" class="form-control" id="newPassword" placeholder="Type here" name="newPassword"
                                   data-toggle="password"></div>
                            <div class="clearfix"></div>
                            <div class="bot-border"></div>

                            <div class="col-sm-5 col-xs-6 tital " >Confirm New Password:</div><div class="col-sm-7">
                            <input type="password" class="form-control" id="confirmPassword" placeholder="Type here" name="confirmPassword"
                                   data-toggle="password"></div>

                            <div class="clearfix"></div>
                            <div class="bot-border"></div>

                            <div class="col-sm-5 col-xs-6 tital " >
                                <button type="submit" class="btn btn-info active" name="submit" value="Update"
                                        onclick="return confirm('Are You Sure ' +
                         'You Want To Change Your Password..!');">Update Pasword</button>
                            </div><div class="col-sm-7"><a href="/users/updatePassword" class="btn btn-default active">Cancel</a></div>

                            <div class="clearfix"></div>
                            <div class="bot-border"></div>
                            </form>


                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->

                    </div>


                </div>
            </div>
        </div>
        <script>
            $(function() {
                $('#profile-image1').on('click', function() {
                    $('#profile-image-upload').click();
                });
            });
        </script>


        <script type="text/javascript">
            $("#password").password('toggle');
        </script>



    </div>
</div>
