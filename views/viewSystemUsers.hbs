<script> var count = 1;</script>
<div class="container">
    <h1>System Users
        <a class="btn btn-success" href="/operations/viewSystemUsers" role="button">All</a>
        <a class="btn btn-primary" href="/operations/viewAdminUsers" role="button">Admin</a>
        <a class="btn btn-warning" href="/operations/viewCustomerUsers" role="button">Customer</a>
    </h1>
    <hr>
    <div class="table-responsive">
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email Address</th>
        <th scope="col">Mobile Number</th>
        <th scope="col">Role</th>
    </tr>
    </thead>
    <tbody>
    {{# each result }}
    <tr>
        <th scope="row"><script>document.write(count)</script></th>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.email}}</td>
        <td>{{this.mobile}}</td>
        <td>{{this.role}}</td>
    </tr>
    <script>count ++;</script>
    {{/each}}
    </tbody>
</table>
    </div>
</div>